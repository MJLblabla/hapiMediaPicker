<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="默认弹窗"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="143dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="180dp" android:layout_marginTop="216dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="直接选择图库"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="156dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="167dp" android:layout_marginTop="77dp"
            app:layout_constraintTop_toBottomOf="@+id/button"/>
    <Button
            android:text="直接选择拍照"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="182dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="141dp" android:layout_marginTop="85dp"
            app:layout_constraintTop_toBottomOf="@+id/button2"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="36dp"
            app:layout_constraintEnd_toStartOf="@+id/button5" android:layout_marginEnd="48dp"
            android:layout_marginBottom="46dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button5" android:layout_marginStart="48dp"
            app:layout_constraintStart_toEndOf="@+id/button4" app:layout_constraintEnd_toStartOf="@+id/button6"
            android:layout_marginEnd="46dp" android:layout_marginBottom="47dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button6" android:layout_marginStart="22dp"
            app:layout_constraintStart_toEndOf="@+id/button5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="34dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>